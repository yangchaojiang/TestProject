<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_click_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/common_btn_click"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:background="@drawable/shape_detail_comment"
        android:drawablePadding="6dp"
        android:gravity="center|left"
        android:paddingLeft="12dp"
        android:text="@string/write_a_commentary"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/common_btn_click_zan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@mipmap/abv" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:paddingLeft="5dip"
        android:scaleType="center"
        android:src="@drawable/ic_share" />

</LinearLayout>